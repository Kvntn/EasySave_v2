<Window x:Class="EasySave_RemoteClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_RemoteClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="EasySave - For your cleanest backups" Height="466" Width="1000" >
    <Grid Margin="0,3,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269*"/>
            <ColumnDefinition Width="231*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button_Start" Content="Save" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="132" Margin="262,316,0,0" Click="Button_Start_Click" Grid.Column="1"/>

        <TextBlock x:Name="txt_Use" HorizontalAlignment="Left" Height="56" TextWrapping="Wrap" VerticalAlignment="Top" Width="750" FontFamily="Verdana" FontSize="36" FontStyle="Italic" Margin="242,108,0,0" Grid.ColumnSpan="2"><Run Text="Use backup"/><Run Language="fr-fr" Text="s"/><Run Text=" :"/></TextBlock>
        <TextBlock x:Name="outputSave" HorizontalAlignment="Left" Height="30" Margin="99,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Grid.Column="1" />
        <ListBox x:Name="listbox_backup" ItemsSource="{Binding MainWindow.BackupNames}" HorizontalAlignment="Left" Height="184" Margin="38,112,0,0" VerticalAlignment="Top" Width="368" SelectionMode="Multiple" Background="{x:Null}" IsSynchronizedWithCurrentItem="False" DataContext="" Grid.Column="1" FontFamily="Verdana" FontSize="14"/>
        <TextBlock x:Name="txt_Use_Copy" HorizontalAlignment="Left" Height="55" TextWrapping="Wrap" VerticalAlignment="Top" Width="750" FontFamily="Verdana" FontSize="36" FontStyle="Italic" Margin="240,23,0,0" Grid.ColumnSpan="2"><Run Text="Connect"/><Run Text=" "/><Run Language="fr-fr" Text="to IP"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="input_src" Text="192.168.1.1" HorizontalAlignment="Left" Height="33" Margin="39,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" AutomationProperties.IsRequiredForForm="True" Grid.Column="1" FontSize="22" FontFamily="Verdana" />

    </Grid>
</Window>
